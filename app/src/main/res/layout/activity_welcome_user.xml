<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WelcomeUser">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="35dp"
            android:layout_width="match_parent"
            android:layout_height="350dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/user_feed"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Welcome User"
                android:textSize="20sp"
                android:fontFamily="@font/opsr"
                android:textColor="#000"
                android:textAlignment="center"/>
            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="press the get started button to begin "
                android:textSize="15sp"
                android:fontFamily="@font/opsl"
                android:textColor="#000"
                android:textAlignment="center"/>
            <Button
                android:id="@+id/verify_number"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="70dp"
                android:layout_marginEnd="70dp"
                android:onClick="openUserBase"
                android:layout_marginTop="40dp"
                android:background="@drawable/button_bg"
                android:text="@string/get_started"
                android:fontFamily="@font/samsungsans_regular"
                android:textColor="#fff"
                android:paddingEnd="35dp"
                android:paddingStart="50dp"
                android:textSize="17sp"
                android:textAllCaps="false"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="end"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">
            <Button
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:background="@drawable/logout_bg"
                android:text="Logout"
                android:layout_marginEnd="10dp"
                android:textAllCaps="false"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:onClick="openLogoutPage"
                android:fontFamily="@font/opsr"
                android:textColor="#666"
                android:drawableEnd="@drawable/icons_export_filled"
                />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>