<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp_Activity"
    android:background="@drawable/forest_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/bg_gradient">

        <TextView
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hi_there"
            android:textSize="35sp"
            android:textColor="#fff"
            android:fontFamily="@font/samsungsans_regular"
            android:textAlignment="center"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sign_up_txt"
            android:textSize="15sp"
            android:textColor="#fff"
            android:fontFamily="@font/opsr"
            android:textAlignment="center"/>

        <LinearLayout
            android:layout_marginTop="60dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/e_mail"
                android:textSize="15sp"
                android:textColor="#f2f2f2"
                android:fontFamily="@font/opsr"
                android:textAlignment="center"
                />
            <EditText
                android:id="@+id/email_tv"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:textColor="#f2f2f2"
                android:inputType="textEmailAddress"
                android:background="@drawable/textviews_bg"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginTop="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/password"
                android:textSize="15sp"
                android:textColor="#f2f2f2"
                android:fontFamily="@font/opsr"
                android:textAlignment="center"
                />
            <EditText
                android:id="@+id/password_tv"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:textColor="#f2f2f2"
                android:inputType="textPassword"
                android:background="@drawable/textviews_bg"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginTop="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/number"
                android:textSize="15sp"
                android:textColor="#f2f2f2"
                android:fontFamily="@font/opsr"
                android:textAlignment="center"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:layout_gravity="center">
                <EditText
                    android:id="@+id/countryCode"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:background="@drawable/linear_border"
                    android:textColor="#f2f2f2"
                    android:hint="@string/country_code"
                    android:textColorHint="#f2f2f2"
                    android:textSize="18sp"
                    android:layout_marginStart="50dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="5dp"/>
                <EditText
                    android:id="@+id/num_textField"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:textColor="#f2f2f2"
                    android:background="@drawable/textviews_bg"
                    android:inputType="number"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="40dp"
                    android:layout_marginTop="5dp"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">
            <Button
                android:id="@+id/verify_number"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="70dp"
                android:layout_marginEnd="70dp"
                android:background="@drawable/button_bg"
                android:text="@string/reg_send"
                android:fontFamily="@font/samsungsans_regular"
                android:textColor="#fff"
                android:onClick="verifyNumber"
                android:drawableEnd="@drawable/icons_number_pad_filled"
                android:paddingEnd="35dp"
                android:paddingStart="50dp"
                android:textSize="17sp"
                android:textAllCaps="false"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/one_time_pass"
                android:textColor="#f2f2f2"
                android:textAlignment="center"
                android:fontFamily="@font/samsungsans_regular"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>